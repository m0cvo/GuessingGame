<Window x:Class="GuessingGame.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessingGame"
        mc:Ignorable="d"
        Title="Guessing Game" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="38" Margin="183,35,0,0" TextWrapping="Wrap" Text="I have chosen a number between 1 and 9, can you guess it?" VerticalAlignment="Top" Width="440" FontSize="16"/>
        <Label Content="Your guess:" HorizontalAlignment="Left" Margin="183,108,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="359,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.175,1.287" FontSize="16" BorderBrush="#FF0A0A0C"/>
        <Label Content="Number of guesses:" HorizontalAlignment="Left" Margin="183,174,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="359,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="16" BorderBrush="#FF070708"/>

    </Grid>
</Window>
